@using MedicoApp.Core.Application.ViewModels.Citas;
@model List<CitasViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Citas" asp-action="Create" class="btn btn-outline-success">Crear nueva cita</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
                        <h2>No hay citas</h2>
        }
        else
        {
            @foreach (CitasViewModel item in Model)
            {
                                        <div class="col-4">
                                            <div class="card shadow-sm">                       

                                                <div class="card-body">
                                                                    <h6 class="card-title">Nombre de la Cita:@item.Name</h6>
                                                                    <h6 class="card-title">Nombre del medico: @item.MedicoName</h6>
                                                                    <h6 class="card-title"> Nombre del paciente: @item.PacienteName</h6
                                                             <p class="card-text"> Hora:@item.HoraDeLaCita</p
                                                             <p class="card-text">Fecha:@item.FechaDeLaCita</p
                                            <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group">
                                                            <a asp-controller="Citas" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                                             <a asp-controller="Citas" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
            }
        }
    </div>

</div>
